<Window x:Class="FlowingCommentWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowingCommentWindow"
        xmlns:components="clr-namespace:FlowingCommentWindow.Components"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        IsEnabled="False"
        Focusable="False"
        ShowActivated="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        FocusManager.IsFocusScope="False"
        Title="MainWindow"
        SizeToContent="WidthAndHeight">
    <Grid>
        <TextBlock x:Name="CommentLabel"
                   Foreground="White"
                   Text="コメント"
                   FontSize="108"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="0,0,0,0"
                   Padding="0,0,0,0"
                   Height="Auto"
                   Width="Auto"
                   IsEnabled="False"
                   Focusable="False"
                   components:Adorning.StrokeThickness="3.0"/>
    </Grid>
</Window>
